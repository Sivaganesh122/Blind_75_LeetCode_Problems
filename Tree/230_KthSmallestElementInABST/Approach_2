class Solution {
    int k;
    int result;
    public void inorderTraversal(TreeNode node) {
        if (node != null) {
            inorderTraversal(node.left);
            if(--k == 0){
                result = node.val;
                return;
            }
            inorderTraversal(node.right);
        }
    }
    public int kthSmallest(TreeNode root, int k) {
        this.k = k;
        this.result = -1;
        inorderTraversal(root);
        return result;
    }
}
