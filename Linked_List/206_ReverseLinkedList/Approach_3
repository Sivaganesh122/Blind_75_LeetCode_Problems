class Solution {
    public ListNode reverseList(ListNode head) {
        if(head == null || head.next == null){
            return head;
        }
        ListNode pre = null;
        ListNode curr = head;
        ListNode n = null;
        while(curr!=null){
            n = curr.next;
            curr.next = pre;
            pre = curr;
            curr = n;
        }
        return pre;
    }
}
//Time Complexity: O(n)
//Space Complexity: O(1)
